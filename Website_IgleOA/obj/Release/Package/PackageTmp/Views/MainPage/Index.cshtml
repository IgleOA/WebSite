<div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
        @foreach (var item in Model)
        {
            if (item.PageIndex == 0)
            {
                <li data-target="#carouselExampleCaptions" data-slide-to=@item.PageIndex class="active"></li>
            }
            else
            {
                <li data-target="#carouselExampleCaptions" data-slide-to=@item.PageIndex></li>
            }
        }
    </ol>
    <div class="carousel-inner">
        @foreach (var item in Model)
        {
            if (item.PageIndex == 0)
            {
                <div class="carousel-item active">
                    <a href="@Url.Action(item.ViewPage, item.Controller)" title="@item.MainAppName" class="links">
                        @{ var imagePath = "/images/" + item.Slide + ".jpg";}
                        <img src=@imagePath class="d-block w-100" alt="...">
                        <div class="carousel-caption d-md-block">
                            <div class="inner">
                                <h2 style="color: white; font-size: 7vw;">@item.MainAppName</h2>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <a href="@Url.Action(item.ViewPage, item.Controller)" title="@item.MainAppName" class="links">
                        @{ var imagePath = "/images/" + item.Slide + ".jpg";}
                        <img src=@imagePath class="d-block w-100" alt="...">
                        <div class="carousel-caption d-md-block">
                            <div class="inner">
                                <h2 style="color: white; font-size: 7vw;">@item.MainAppName</h2>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        }
    </div>
    <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>