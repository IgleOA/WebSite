@model ET.MusicSheets

@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_MusicLayout.cshtml";
}

<div class="row">
    <div class="6u 12u$(small)">
        <h4 style="font-weight: bold;">Detalles</h4>
        <hr />
        <h5 style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.MSTypeID): <span style="font-weight: normal;">@Html.DisplayFor(model => model.MSTypesData.MSTypeName)</span>
        </h5>
        <h5 style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.SongID): <span style="font-weight: normal;">@Html.DisplayFor(model => model.SongsData.SongName)</span>
        </h5>
        <h5 style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.InstrumentID): <span style="font-weight: normal;">@Html.DisplayFor(model => model.InstrumentsData.Instrument)</span>
        </h5>
        <h5 style="font-weight: bold;">
            @Html.DisplayNameFor(model => model.Tonality): <span style="font-weight: normal;">@Html.DisplayFor(model => model.Tonality)</span>
        </h5>
        <iframe src="@Model.Version" style="width: 100%;height: 500px;"></iframe>
    </div>
    <div class="6u 12u$(small)">
        <h4 style="font-weight: bold;">Partitura</h4>
        <hr />
        <div style="padding-top: 5px;padding-bottom: 5px;">
            @Html.ActionLink("Descargar Partitura", "DownLoadFile", new { id = Model.MSID })
        </div>
        <div class="h_iframe">
            <iframe src="@Url.Action("GetPDF", new {id = Model.MSID})" style="width: 100%;height: 625px;"></iframe>
        </div>
    </div>
</div>

