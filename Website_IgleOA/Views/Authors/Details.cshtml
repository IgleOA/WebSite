@model IEnumerable<ET.Songs>

@using GridMvc.Html;

@{
    ViewBag.Title = "Repertorio";
    Layout = "~/Views/Shared/_MusicLayout.cshtml";
}

<link href="~/Content/Gridmvc.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/gridmvc.min.js"></script>
<script type="text/javascript">
    function CreatebyAuthor() {
        var url = '@Url.Action("CreatebyAuthor", "Songs", new { id = ViewBag.AuthorID })';
        window.open(url, '_blank' , 'left=100,top=100,width=500,height=650,toolbar=1,resizable=0');
    }
</script>
<script type="text/javascript">
    function OpenCharts(id) {
        var url = '@Url.Action("MusicSheetsbySong", "MusicSheets", new { SongID = "song" })';
        url = url.replace("song", id)
        window.open(url, '_blank' , 'left=100,top=100,width=1000,height=650,toolbar=1,resizable=1');
    }
</script>
<h2>@ViewBag.Title - Autor: @ViewBag.AuthorName</h2>

<div>
    <hr />
    <div>
        @if (ViewBag.WriteFlag == true)
        {
            <a id="BtnNew" class="button small" href="#" onclick="CreatebyAuthor();">Agregar Nueva Canción</a>
        }
        else
        { }
    </div>
    <div class="code-cut" style="width: 90%; font-size: 15px;">
        @Html.Grid(Model).Columns(Columns =>
        {
            Columns.Add(c => c.SongName).Titled("Canción").Filterable(true);
            Columns.Add()
                .Encoded(false)
                .Sanitized(false)
                .RenderValueAs(c => new HtmlString("<a id='ChartsLink' href='#' onclick='OpenCharts(" + c.SongID + ");'>Partituras</a>"));
        }).WithPaging(10).Sortable(true)
    </div>
</div>